---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<main>
		<section
			class="relative z-10 mx-auto max-w-6xl overflow-hidden bg-black py-20 lg:py-[120px]"
		>
			<div class="container">
				<div class="-mx-4 flex flex-wrap lg:justify-between">
					<div class="w-full px-4 lg:w-1/2 xl:w-6/12">
						<div class="mb-12 max-w-[570px] lg:mb-0">
							<span
								class="mb-4 block text-base font-semibold text-indigo-300"
							>
								Contact
							</span>
							<h2
								class="text-white font-heading mb-6 text-[32px] font-bold uppercase sm:text-[40px] lg:text-[36px] xl:text-[40px]"
							>
								GET IN TOUCH WITH US
							</h2>
							<p
								class="mb-9 text-base leading-relaxed text-gray-300"
							>
								Have questions or need assistance with our
								products and services? Get in touch with us
								using the form below, and our team will respond
								promptly. Whether you're seeking tech solutions
								or support, we're here to help!
							</p>
						</div>
					</div>
					<div class="w-full px-4 lg:w-1/2 xl:w-5/12">
						<div
							class="relative rounded-lg bg-gray-800 p-8 shadow-lg sm:p-12"
						>
							<form action="https://submit-form.com/oNN6N4Ag6">
								<div class="mb-6">
									<input
										type="text"
										required
										placeholder="Your Name"
										name="name"
										class="w-full rounded border border-indigo-400 px-3.5 py-3 text-base text-white outline-none focus:border-indigo-300 focus-visible:shadow-none bg-gray-700"
									/>
								</div>
								<div class="mb-6">
									<input
										type="email"
										required
										placeholder="Your Email"
										name="email"
										class="w-full rounded border border-indigo-400 px-3.5 py-3 text-base text-white outline-none focus:border-indigo-300 focus-visible:shadow-none bg-gray-700"
									/>
								</div>
								<div class="mb-6">
									<textarea
										rows="6"
										required
										name="message"
										placeholder="Your Message"
										class="w-full resize-none rounded border border-indigo-400 px-3.5 py-3 text-base text-white outline-none focus:border-indigo-300 focus-visible:shadow-none bg-gray-700"
									></textarea>
								</div>
								<div>
									<button
										type="submit"
										class="whitespace-no-wrap inline-flex items-center justify-center rounded-md border border-indigo-900 bg-indigo-800 px-4 py-2 text-base leading-6 font-medium text-white shadow-sm hover:bg-indigo-900 focus:ring-2 focus:ring-transparent focus:ring-offset-0 focus:outline-none"
									>
										Send Message
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
