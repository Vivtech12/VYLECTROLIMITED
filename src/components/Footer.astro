---
import { Icon } from "astro-icon/components";
import icon from "../assets/logo.webp";

import { companyInfo } from "../consts";
import { Image } from "astro:assets";
---

<footer class="">
	<div class="relative mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8 lg:pt-24">
		<div class="absolute end-4 top-4 sm:end-6 sm:top-6 lg:end-8 lg:top-8">
			<a
				class="inline-block rounded-full bg-gradient-button-primary p-2 text-white shadow transition hover:bg-indigo-700 sm:p-3 lg:p-4"
				href="#MainContent"
			>
				<span class="sr-only">Back to top</span>

				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-5 w-5"
					viewBox="0 0 20 20"
					fill="currentColor"
				>
					<path
						fill-rule="evenodd"
						d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"
						clip-rule="evenodd"></path>
				</svg>
			</a>
		</div>
		<div class="lg:flex lg:items-end lg:justify-between">
			<div>
				<div
					class="mb-2 flex justify-start px-4 text-indigo-900 2xl:px-0"
				>
					<a href="/" class="flex items-center gap-2">
						<Icon name="logo" class="h-auto w-16 text-indigo-900" />
						<p class="leading-tight pt-3.5 font-bold text-white">
							Vylectro <br /> Limited
						</p>
					</a>
				</div>
				<div class="px-4 2xl:px-0">
					<h2 class="mb-4 text-lg! font-semibold text-neutral-200">
						Company Information
					</h2>
					<div class="space-y-3 font-medium">
						<!-- <div class="flex items-center gap-3">
							<Icon name="receipt" class="h-5 w-5 text-indigo-600" />
							<span class="text-neutral-400">VAT number: {companyInfo.vatNumber}</span>
						</div> -->

						<div class="flex items-center gap-3">
							<Icon
								name="phone"
								class="h-5 w-5 text-indigo-600"
							/>
							<a
								href={`tel:${companyInfo.phone}`}
								class="text-neutral-400 transition-colors duration-300 hover:text-indigo-600 hover:underline"
							>
								{companyInfo.phone}
							</a>
						</div>

						<!-- <div class="flex items-center gap-3">
							<Icon name="email" class="h-5 w-5 text-indigo-600" />
							<a
								href={`mailto:${companyInfo.email}`}
								class="text-neutral-400 transition-colors duration-300 hover:text-indigo-600 hover:underline"
							>
								{companyInfo.email}
							</a>
						</div> -->
					</div>
				</div>
			</div>

			<ul
				class="mt-12 flex flex-wrap justify-center gap-6 font-medium md:gap-8 lg:mt-0 lg:justify-end lg:gap-12"
			>
				<li>
					<a
						class="text-neutral-400 transition hover:text-neutral-400/75"
						href="/#about"
					>
						About
					</a>
				</li>

				<li>
					<a
						class="text-neutral-400 transition hover:text-neutral-400/75"
						href="/#testimonials"
					>
						Testimonials
					</a>
				</li>

				<li>
					<a
						class="text-neutral-400 transition hover:text-neutral-400/75"
						href="/contact"
					>
						Contact
					</a>
				</li>

				<li>
					<a
						class="text-neutral-400 transition hover:text-neutral-400/75"
						href="/signup"
					>
						Sign Up
					</a>
				</li>
			</ul>
		</div>

		<p
			class="m-0! mt-12 pt-12 text-center text-sm! text-gray-500 lg:text-right"
		>
			Copyright &copy; {new Date().getFullYear()}. All rights reserved.
		</p>
	</div>
</footer>
